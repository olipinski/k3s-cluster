global_defs {
    enable_script_security
    max_auto_priority 99
    notification_email {
        {{ global_map.credentials.cluster.postfix.user.alias }}
    }
    notification_email_from {{ global_map.credentials.cluster.postfix.user.alias }}
    script_user haproxy
    smtp_connect_timeout 30
    smtp_server 127.0.0.1
    vrrp_startup_delay 10
}

# Health check scripts with improved reliability
vrrp_script chk_k3s_api {
    script "/usr/local/bin/check_k3s_api.sh"
    interval 3
    weight 50
    fall 2
    rise 1
    timeout 3
}

vrrp_script chk_haproxy {
    script "killall -0 haproxy"
    interval 2
    weight 25
    fall 3
    rise 2
}

vrrp_instance haproxy-vip {
    authentication {
        auth_type AH
        auth_pass {{ k3s_map.loadbalancer.password }}
    }
    interface {{ k3s_vars.network.interface }}
{% if inventory_hostname == k3s_map.loadbalancer.hosts[0] %}
    priority 200
    state MASTER
    unicast_peer {
        {{ k3s_map_loadbalancer.ips[1] }}
    }
    unicast_src_ip {{ k3s_map_loadbalancer.ips[0] }}
{% else %}
    priority 100
    state BACKUP
    unicast_peer {
        {{ k3s_map_loadbalancer.ips[0] }}
    }
    unicast_src_ip {{ k3s_map_loadbalancer.ips[1] }}
{% endif %}
    smtp_alert
    track_script {
        chk_k3s_api
        chk_haproxy
    }
    virtual_router_id 10
    virtual_ipaddress {
        {{ k3s_vars.server.api.host }}
    }
    # Prevent flapping
    nopreempt
    preempt_delay 300
    # Delay gratuitous ARP to prevent issues
    garp_master_delay 5
    # Add notifications
    notify "/usr/local/bin/keepalived-notify.sh"
    # Use VMAC for advertisement
    use_vmac
}
